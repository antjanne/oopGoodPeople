<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goodpeople.gooddeeds">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".View.MarketActivity" />
        <activity android:name=".View.MyActiveDeeds" />

        <activity android:name=".View.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".View.Account.CreateAccount" />
        <activity android:name=".View.Account.Login" />
        <activity android:name=".View.Account.AccountDetails" />
        <activity android:name=".View.Account.EditAccount" />
        <activity android:name=".View.Account.EditAccountPassword" />
        <activity android:name=".View.CreateDeed" />
        <activity android:name=".View.EditDeed" />
        <activity android:name=".View.Account.AccountOptions" />
        <activity android:name=".View.ViewDeed" />
        <activity android:name=".View.NoAccess" />

    </application>

</manifest>